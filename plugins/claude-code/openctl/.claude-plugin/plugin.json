{
  "name": "openctl",
  "description": "Enables remote feedback during Claude Code sessions",
  "version": "0.1.0",
  "hooks": {
    "Stop": [
      {
        "type": "command",
        "command": "bun ${PLUGIN_DIR}/hooks/stop.ts"
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bun ${PLUGIN_DIR}/hooks/user-prompt-submit.ts"
      }
    ]
  }
}
